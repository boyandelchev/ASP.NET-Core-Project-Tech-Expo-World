@model AddNewsFormModel

@{ 
    ViewBag.Title = "Add a News Article"; 
}

<div class="row">
    <div class="col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="The potential of IoT and Cloud Computing...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="10" class="form-control" placeholder="The Internet of Things (IoT) and Cloud Computing are quite the rage these days in the world of information..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Add a URL for picture here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsCategoryId"></label>
                <select asp-for="NewsCategoryId" class="form-control">
                    @foreach (var newsCategory in Model.NewsCategories)
                    {
                        <option value="@newsCategory.Id">@newsCategory.Name</option>
                    }
                </select>
                <span asp-validation-for="NewsCategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagIds"></label>
                <select asp-for="TagIds" multiple class="form-control">
                    @foreach (var tag in Model.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span asp-validation-for="TagIds" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Submit" />
        </form>
    </div>
</div>
