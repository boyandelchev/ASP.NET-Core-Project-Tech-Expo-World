@model NewsArticleDeleteDetailsViewModel

<div class="row">
    <div class="col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form asp-controller="News" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" readonly placeholder="The potential of IoT and Cloud Computing...">
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="10" class="form-control" readonly placeholder="The Internet of Things (IoT) and Cloud Computing are quite the rage these days in the world of information..."></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" readonly placeholder="Add a URL for picture here...">
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" readonly>
                    @foreach (var newsCategory in Model.Categories)
                    {
                        <option value="@newsCategory.Id">@newsCategory.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TagIds"></label>
                <select asp-for="TagIds" multiple class="form-control" readonly>
                    @foreach (var tag in Model.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
            </div>

            <input class="btn btn-danger mt-3" type="submit" value="Delete" />
        </form>
    </div>
</div>