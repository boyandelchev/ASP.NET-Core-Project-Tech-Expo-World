@model AllNewsQueryModel

@{
    var previousPage = Model.CurrentPage - 1;

    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = (int)Math.Ceiling((double)Model.TotalNewsArticles / AllNewsQueryModel.NewsArticlesPerPage);

    var isNextButtonDisabled = Model.CurrentPage == maxPage || !Model.News.Any();

    var firstPage = Model.CurrentPage - 3;
    var lastPage = Model.CurrentPage + 3;

    if (firstPage < 1)
    {
        firstPage = 1;
        lastPage = 7;
    }

    if (lastPage > maxPage)
    {
        lastPage = maxPage;
    }

    if (firstPage > maxPage - 6)
    {
        firstPage = maxPage - 6;

        if (firstPage < 1)
        {
            firstPage = 1;
        }
    }
}

<nav aria-label="Page navigation for news articles">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
            <a class="page-link"
               asp-controller="News"
               asp-action="All"
               asp-route-currentPage="@previousPage"
               asp-route-category="@Model.Category"
               asp-route-tag="@Model.Tag"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">
                Previous
            </a>
        </li>
        <li class="page-item @(firstPage == 1 ? "d-none" : null)">
            <a class="page-link"
               asp-controller="News"
               asp-action="All"
               asp-route-currentPage="1"
               asp-route-category="@Model.Category"
               asp-route-tag="@Model.Tag"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">
                1
            </a>
        </li>
        <li>...</li>
        @for (int i = firstPage; i <= lastPage; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : null)"
            aria-current="@(Model.CurrentPage == i ? "page" : null)">
                <a class="page-link"
               asp-controller="News"
               asp-action="All"
               asp-route-currentPage="@i"
               asp-route-category="@Model.Category"
               asp-route-tag="@Model.Tag"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">
                    @i
                </a>
            </li>
        }
        <li>...</li>
        <li class="page-item @(lastPage == maxPage ? "d-none" : null)">
            <a class="page-link"
               asp-controller="News"
               asp-action="All"
               asp-route-currentPage="@maxPage"
               asp-route-category="@Model.Category"
               asp-route-tag="@Model.Tag"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">
                @maxPage
            </a>
        </li>
        <li class="page-item @(isNextButtonDisabled ? "disabled" : null)">
            <a class="page-link"
               asp-controller="News"
               asp-action="All"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-category="@Model.Category"
               asp-route-tag="@Model.Tag"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">
                Next
            </a>
        </li>
    </ul>
</nav>