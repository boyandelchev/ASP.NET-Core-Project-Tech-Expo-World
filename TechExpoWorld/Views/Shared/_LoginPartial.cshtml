@using Microsoft.AspNetCore.Identity
@using TechExpoWorld.Data.Models 
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IAuthorService Authors

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = User.Id();
        var isAuthor = Authors.IsAuthor(userId);
        var isAdmin = User.IsAdmin();

        if (isAuthor && !isAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="News" asp-action="MyNewsArticles">My News Articles</a>
            </li>
        }
        else if (!isAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Authors" asp-action="BecomeAuthor">Become Author</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
