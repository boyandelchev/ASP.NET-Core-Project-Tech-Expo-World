@model TechExpoWorld.Models.Authors.BecomeAuthorFormModel

@{
    ViewBag.Title = "Become an Author";
}

<div class="row">
    <div class="col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="James Bentley...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+44-7911-123456...">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" placeholder="12 Oxford St London UK...">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhotoUrl" class="form-label"></label>
                <input asp-for="PhotoUrl" class="form-control" placeholder="Provide a Photo URL here...">
                <span asp-validation-for="PhotoUrl" class="small text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" class="btn btn-primary" value="Save" />
                <input type="reset" class="btn btn-secondary" value="Clear" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}