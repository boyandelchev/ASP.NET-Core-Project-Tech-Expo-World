@model EventFormModel

@{
    ViewBag.Title = "Edit an Event";
}

<partial name="_EventFormPartial" model="Model" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector('input[type="reset"]')
            .addEventListener('click', (e) => {
                e.preventDefault();

                document.getElementById('Title').value = '';
                document.getElementById('Content').value = '';
                document.getElementById('Location').value = '';
                document.getElementById('StartDate').value = '';
                document.getElementById('EndDate').value = '';
                document.getElementById('TotalPhysicalTickets').value = '';
                document.getElementById('TotalVirtualTickets').value = '';
                document.getElementById('PhysicalTicketPrice').value = '';
                document.getElementById('VirtualTicketPrice').value = '';
            });
    </script>
}