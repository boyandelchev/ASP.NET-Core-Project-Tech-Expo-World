@model EventFormModel

<div class="row">
    <div class="col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="AI and Big Data Expo...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="10" class="form-control" placeholder="The leading Artificial Intelligence..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" placeholder="London, UK...">
                <span asp-validation-for="Location" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="datetime-local" class="form-control">
                <span asp-validation-for="StartDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="datetime-local" class="form-control">
                <span asp-validation-for="EndDate" class="small text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalPhysicalTickets"></label>
                        <input asp-for="TotalPhysicalTickets" class="form-control" placeholder="Count e.g. 245">
                        <span asp-validation-for="TotalPhysicalTickets" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhysicalTicketPrice"></label>
                        <input asp-for="PhysicalTicketPrice" class="form-control" placeholder="e.g. 400.00">
                        <span asp-validation-for="PhysicalTicketPrice" class="small text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalVirtualTickets"></label>
                        <input asp-for="TotalVirtualTickets" class="form-control" placeholder="Count e.g. 245">
                        <span asp-validation-for="TotalVirtualTickets" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VirtualTicketPrice"></label>
                        <input asp-for="VirtualTicketPrice" class="form-control" placeholder="e.g. 400.00">
                        <span asp-validation-for="VirtualTicketPrice" class="small text-danger"></span>
                    </div>
                </div>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Submit" />
            <input class="btn btn-secondary mt-3 float-right" type="reset" value="Clear" />
        </form>
    </div>
</div>