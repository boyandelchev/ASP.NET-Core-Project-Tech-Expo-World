@using TechExpoWorld.Web.ViewModels.Comments

@{
    var input = ViewBag.CommentInput as CommentInputModel;
}

<form asp-controller="Comments" asp-action="Add" asp-route-id="@ViewBag.NewsArticleId" method="post">
    <div class="mb-3">
        <label asp-for="@input.Content" class="form-label"></label>
        <textarea asp-for="@input.Content" class="form-control" rows="5" placeholder="Add a comment"></textarea>
        <span asp-validation-for="@input.Content" class="small text-danger"></span>
    </div>
    <div class="mb-3" hidden>
        <label asp-for="@input.ParentCommentId" class="form-label"></label>
        <input asp-for="@input.ParentCommentId" class="form-control" value="@ViewBag.CommentId" />
        <span asp-validation-for="@input.ParentCommentId" class="small text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <input type="submit" class="btn btn-primary px-5" value="Add" />
        <input type="reset" class="btn btn-secondary" value="Clear" />
    </div>
</form>