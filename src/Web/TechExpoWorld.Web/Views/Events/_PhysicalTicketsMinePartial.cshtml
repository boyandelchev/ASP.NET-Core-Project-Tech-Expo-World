@using TechExpoWorld.Web.ViewModels.Events
@model IEnumerable<TicketMineViewModel>

<table class="table table-hover">
    <thead class="bg-info text-white">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Event</th>
            <th scope="col" class="text-end">Physical Tickets</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var physicalTicketMine in Model)
        {
            <tr>
                <th scope="row">@(ViewBag.CountPhysicalTickets++)</th>
                <td>@physicalTicketMine.EventTitle</td>
                <td>
                    <a asp-controller="Events" asp-action="CancelTicket" asp-route-id="@physicalTicketMine.EventId" asp-route-ticketId="@physicalTicketMine.TicketId">
                        <span class="btn btn-primary btn-outline-dark text-white float-end">Cancel this Ticket</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>